{
  "name": "mcp-sidecar-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter @sidecar/server dev\" \"pnpm --filter @sidecar/extension dev\"",
    "watch": "pnpm -r run watch",
    "build": "pnpm -r run build",
    "start": "pnpm --filter @sidecar/extension build && pnpm --filter @sidecar/server start",
    "clean": "rm -rf node_modules apps/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "typescript": "^5.0.0"
  }
}