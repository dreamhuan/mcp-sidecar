{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true, // <--- 修复 TS6306: 必须是组合项目
    "noEmit": false, // <--- 修复 TS6310: 必须允许输出
    "emitDeclarationOnly": true, // 只输出类型定义，不生成 .js 文件
    "outDir": "dist/types-node", // 把输出扔到 dist 里，别污染源码目录
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  },
  "include": ["vite.config.ts"]
}
